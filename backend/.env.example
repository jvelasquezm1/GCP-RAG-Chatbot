# GCP / Firestore Configuration
GCP_PROJECT_ID=your-gcp-project-id
GCP_LOCATION=global
FIRESTORE_COLLECTION=documents

# Gemini / AI Configuration
GEMINI_API_KEY=your-gemini-api-key
GEMINI_MODEL=gemini-2.5-flash
GEMINI_TEMPERATURE=0.7
GEMINI_EMBEDDING_MODEL=models/text-embedding-004

# Text Processing Configuration
CHUNK_SIZE=1000
CHUNK_OVERLAP=200

# RAG Configuration
RAG_ENABLED=true
RAG_TOP_K=5
RAG_SIMILARITY_THRESHOLD=0.0

# System Prompt
SYSTEM_PROMPT=You are a helpful AI assistant. Provide clear, concise, and accurate answers. If you don't know something, say so honestly.

# Backend Configuration
DEBUG=false

# CORS Configuration (comma-separated list)
CORS_ORIGINS=http://localhost:5173,http://localhost:3000,http://127.0.0.1:5173,http://127.0.0.1:3000

INGESTION_ENABLED="true"
INGESTION_IP_WHITELIST: "127.0.0.1", "::1"